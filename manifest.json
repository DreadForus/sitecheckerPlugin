{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 2,
  "name": "Website SEO Checker",
  "short_name": "SiteChecker.pro",
  "description": "Get free on-page SEO report by 100+ parameters with the best website SEO checker",
  "version": "1.5",
  "default_locale": "en",
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Check URL for SEO issues!"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ]
}